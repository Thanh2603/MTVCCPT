@model DACN.Models.Admin
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h2>Xóa tài khoản</h2>
<h3>Bạn Có chắc chắn muốn xóa tài khoản này?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên Đăng Nhập
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TaiKhoan)
        </dd>

        <dt>
            Mật Khẩu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MatKhau)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa tài khoản" class="btn btn-danger" />
        </div>
        <div class="btn">
            @Html.ActionLink("Back to List", "TaiKhoan")
        </div>
    }
</div>
